//This code will go in the Logic Manager

    private int score = 0; // Player's score
    public Text scoreText; // Reference to the Text component

    public void IncreaseScore()
    {
        score++; // Increase the score by one
        scoreText.text = "Score: " + score.ToString(); // Update the text component with the new score
        // You can add any other actions or effects related to increasing the score here
    }
